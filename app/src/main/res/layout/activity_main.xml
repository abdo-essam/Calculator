<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Display Area Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/displayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/display_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Expression Display -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/doppio_one"
            android:gravity="end"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/doppio_one"
            android:gravity="end"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp"
            android:text="0"
            android:textColor="@color/brown_text"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Bottom Indicator Rectangle -->
        <View
            android:id="@+id/bottomIndicator"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bottom_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAC"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="AC" />

            <Button
                android:id="@+id/btnBackspace"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                app:icon="@drawable/arrow_left"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/brown_text" />

            <Button
                android:id="@+id/btnPercent"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_orange"
                android:text="%" />

            <Button
                android:id="@+id/btnDivide"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_circular_orange"
                android:text="/" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="9" />

            <Button
                android:id="@+id/btnMultiply"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_circular_orange"
                android:text="×" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="6" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_circular_orange"
                android:text="+" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="3" />

            <Button
                android:id="@+id/btnSubtract"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_circular_orange"
                android:text="-" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlusMinus"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="±" />

            <Button
                android:id="@+id/btn0"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                style="@style/ButtonGray"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_circular_gray"
                android:text="." />

            <Button
                android:id="@+id/btnEquals"
                style="@style/ButtonOrange"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_circular_orange"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>